{
  "name": "outstatic-monorepo",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev --filter=outstatic-dev-blog --filter=outstatic",
    "dev:docs": "turbo run dev --filter=docs --filter=outstatic",
    "dev:outstatic": "turbo run dev --filter=outstatic",
    "lint": "turbo run lint",
    "lint:fix": "turbo lint --cache-dir=.turbo --affected --continue -- --fix --cache --cache-location \"node_modules/.cache/.eslintcache\" && manypkg fix",
    "clean": "git clean -xdf node_modules dist .next",
    "format": "prettier --write",
    "lint-staged": "lint-staged",
    "preinstall": "npx only-allow pnpm",
    "postinstall": "manypkg check && manypkg fix",
    "test": "turbo run test",
    "typecheck": "turbo run typecheck",
    "prepublish": "pnpm clean && pnpm i && pnpm lint && pnpm prettier --check . && pnpm typecheck && pnpm test && pnpm build",
    "release:outstatic": "pnpm clean && pnpm i && pnpm build --filter=outstatic && pnpm test --filter=outstatic",
    "publish:canary": "pnpm release:outstatic && pnpm publish --filter=outstatic --tag canary",
    "publish:latest": "pnpm release:outstatic && pnpm publish --filter=outstatic --tag latest",
    "publish:canary:dry": "pnpm release:outstatic && pnpm publish --filter=outstatic --tag canary --dry-run",
    "publish:latest:dry": "pnpm release:outstatic && pnpm publish --filter=outstatic --tag latest --dry-run",
    "pack:outstatic": "pnpm release:outstatic && pnpm --dir packages/outstatic pack"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.1",
    "@manypkg/cli": "^0.24.0",
    "eslint": "^9.39.2",
    "eslint-config-next": "^16.1.6",
    "eslint-config-prettier": "^10.0.8",
    "eslint-config-turbo": "^2.8.0",
    "eslint-plugin-react": "^7.37.5",
    "lint-staged": "^13.3.0",
    "prettier": "^3.8.1",
    "prettier-plugin-tailwindcss": "^0.7.2",
    "turbo": "^2.8.0"
  },
  "packageManager": "pnpm@9.12.2",
  "pnpm": {
    "overrides": {
      "@types/react": "19.0.0",
      "@types/react-dom": "19.0.0",
      "prosemirror-model": "1.24.1"
    }
  }
}